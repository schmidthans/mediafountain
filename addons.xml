<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.mediafountain" name="MediaFountain Repository" version="1.0.1" provider-name="mediafountain">
	<extension point="xbmc.addon.repository" name="MediaFountain Addon Repository">
	  https://github.com/schmidthans/mediafountain
	<info>http://github.com/schmidthans/mediafountain/raw/master/addons.xml</info>
	<checksum>http://github.com/schmidthans/mediafountain/raw/master/addons.xml.md5</checksum>
	<datadir zip="true">http://github.com/schmidthans/mediafountain/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>MediaFountain Repository</summary>
		<description></description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.mediaroot"
       name="MediaRoot"
       version="0.4.3"
       provider-name="MediaFountain, based on Plugin by o9r1sh">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.urlresolver" version="2.0.9"/>
    <import addon="script.module.metahandler" version="1.0.0" />
    <import addon="script.module.t0mm0.common" version="1.1.0"/>
    <import addon="script.common.plugin.cache" version="0.9.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Play content from an ever growing list of sources</summary>
    <description>MediaFountain is a video site aggregator that enables you to watch content from many different sources.

Special greetings goes to 'quetschensiggi' and 'Heinzn'
</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>
